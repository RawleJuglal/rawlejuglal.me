<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--Custom CSS-->
    <link rel="stylesheet" href='/stylesheets/codecademy/CONCACAFR5.css'>
    <!-- Latest compiled and minified JavaScript -->
    <!--JQuery-->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!--Bootstrap-->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src='/bower_components/angular/angular.min.js'></script>
  </head>
  <body ng-app='codecademy'>
          <div class='header'>
            <div class='container'>
                <h1 class='text-center'>Guess the Score</h1>
            </div><!--End of container-->
          </div><!--End of header-->
          <div class='main' ng-controller='concacafController as main'>
            <div class='container'>
                <div id='match' class="row" ng-repeat="match in main.matches">
                   <div id='matchInfo' class='col-xs-12 col-sm-3'>
                       <div class='row'>
                           <div class='col-xs-5 col-sm-12'>
                               <p class="no-pad">Round 5</p>
                               <p ng-bind='::match.matchdate|date' class="no-pad"></p>
                           </div><!--End of col-xs-6-->
                           <div class='col-xs-7 col-sm-12'>
                               <p ng-bind='::match.stadium' class="no-pad"></p>
                               <p ng-bind='::match.city' class="no-pad"></p>
                           </div><!--End of col-xs-6-->
                       </div><!--End of row-->
                   </div><!--End of matchInfo-->
                   <div id='matchTeams' class='col-xs-12 col-sm-9'>
                       <div class='row'>
                           <div class='col-xs-2 col-sm-1'>
                                    <button class='btn' ng-click="main.addHome($index)"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                                    <button class='btn' ng-click="main.minusHome($index)"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
                           </div><!--End of col-xs-2-->
                           <div class='col-xs-6 col-sm-3'>
                               <img ng-src="{{match.homeFlag_img}}" width="100px" height="60px">
                               <h4 ng-bind='::match.homeTeam' class="media-heading"></h4>
                           </div><!--End of col-xs-2-->
                           <div class='col-xs-4 col-sm-2 score'>
                              <span>{{match.homeCount}}</span><span>-</span><span>{{match.awayCount}}</span>
                           </div><!--End of col-xs-2-->
                           <div class='col-xs-2 col-sm-1'>
                                <button class='btn' ng-click="main.addAway($index)"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                                <button class='btn' ng-click="main.minusAway($index)"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
                           </div><!--End of col-xs-2-->
                           <div class='col-xs-6 col-sm-3'>
                               <img ng-src="{{match.awayFlag_img}}" width="100px" height="60px">
                               <h4 ng-bind='::match.awayTeam' class="media-heading"></h4>
                           </div><!--End of col-xs-2-->
                       </div><!--End of row-->
                   </div><!--End of matchTeams-->
                </div><!--End of row-->
            </div><!--End of container-->
        </div><!--End of main-->
        <div class='subrow'>
           <div class='container'>
               <div class='row'>
                   <div class='col-xs-12 col-sm-4 col-sm-offset-4'>
                      <input class="btn btn-default btn-block" type="submit" value="Submit"> 
                   </div><!--End of col-xs-12-->
               </div><!--End of row-->
           </div><!--End of container--> 
        </div><!--End of subrow-->
    <!--Module-->
    <script src="/ang.js"></script>
    <!--Controller-->
    <script src='/Controllers/codecademy/concacafController.js'></script>
  </body>
</html>