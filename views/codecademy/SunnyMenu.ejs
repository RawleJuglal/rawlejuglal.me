<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--Custom CSS-->
    <link rel="stylesheet" href='/stylesheets/codecademy/sunnyMenu.css'>
    <!-- Latest compiled and minified JavaScript -->
    <!--JQuery-->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!--Bootstrap-->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src='/bower_components/angular/angular.min.js'></script>
  </head>
  <body ng-app='codecademy'>
    <div class="header">
        <h1><span>Sunny</span><span>Side Up</span></h1>
    </div>
    
    <div class="main" ng-controller="sunnyController">
        <div class="container">
            <div id='menuDiv'>
                <h1>Specials for {{ today | date }}</h1>
                <h2>Appetizers</h2>
                <div class="media" ng-repeat="appetizer in appetizers">
                  <div class="media-left">
                      <img class="media-object" ng-src="{{appetizer.img}}" height="100px" width="100px">
                  </div><!--End of media-left-->
                  <div class="media-body">
                    <div class="appetizers row" >
                      <div class="item col-md-9">
                        <h3 class="name">{{appetizer.name}} </h3>
                        <p class="description">{{appetizer.description}} </p>
                      </div><!--End of item-->
                      <div class="price col-md-3">
                        <p class="price"> {{appetizer.price | currency }}</p>
                      </div><!--End of price-->
                    </div><!--End of row-->
                  </div><!--End of media-body-->
                </div><!--End of media-->
                <h2>Main Dishes</h2>
                <div class="media" ng-repeat="main in mains">
                  <div class="media-left">
                      <img class="media-object" ng-src="{{main.img}}" height="100px" width="100px">
                  </div><!--End of media-left-->
                  <div class="media-body">
                    <div class="mains row" >
                          <div class="item col-md-9">
                            <h3 class="name">{{main.name}} </h3>
                            <p class="description">{{main.description}} </p>
                          </div><!--End of item-->
                          <div class="price col-md-3">
                            <p class="price"> {{main.price | currency }}</p>
                          </div><!--End of price-->
                    </div><!--End of row-->
                  </div><!--End of media-body-->
                </div><!--End of media-->     
        			 
                <h2>Extras</h2>
               <div class="media" ng-repeat="extra in extras">
                  <div class="media-left">
                      <img class="media-object" ng-src="{{extra.img}}" height="100px" width="100px">
                  </div><!--End of media-left-->
                  <div class="media-body">
                    <div class="mains row" >
                          <div class="item col-md-9">
                            <h3 class="name">{{extra.name}} </h3>
                          </div><!--End of item-->
                          <div class="price col-md-3">
                            <p class="price"> {{extra.price | currency }}</p>
                          </div><!--End of price-->
                    </div><!--End of mains-->
                  </div><!--End of media-body-->
                </div><!--End of media-->
            </div><!--End of menuDiv-->
              
            
          </div><!--End of container-->
        </div><!--End of main-->
    
        <div class="footer">
        </div><!--End of footer-->
    <!--Module-->
    <script src="/ang.js"></script>
    <!--Controller-->
    <script src='/Controllers/codecademy/sunnyController.js'></script>
  </body>
</html>