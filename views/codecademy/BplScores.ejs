<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--Custom CSS-->
    <link rel="stylesheet" href='/stylesheets/codecademy/bplScores.css'>
    <!-- Latest compiled and minified JavaScript -->
    <!--JQuery-->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!--Bootstrap-->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src='/bower_components/angular/angular.min.js'></script>
  </head>
  <body ng-app='codecademy'>
    <div class='header'>
        <div class='container-fluid'>
            <div class='row'>
                <div class='col-xs-12'>
                    <h1 class='text-center'>Barclays Premier League Scores</h1>
                </div><!--End of col-xs-12-->
            </div><!--End of row-->
        </div><!--End of container-fluid-->
    </div><!--End of header-->
    <div class='main' ng-controller='bplScoreController as main'>
        <div class='container-fluid'>
            <div class='row'>
                <div class='col-xs-12 col-sm-6' ng-repeat='score in main.scores'>
                    <div class='scoreDiv'>
                        <div class='container-fluid'>
                            <div class='row'>
                                <div class='col-xs-12 text-center'>
                                    <p ng-bind='score.period' class='lead'></p>
                                </div><!--End of col-xs-12-->
                            </div><!--End of row-->
                            <div class='row'>
                                <div class='col-xs-12'>
                                    <span class='numeral text-center'>{{score.homeTeam.home_score}} - {{score.visitorTeam.visitor_score}}</span>
                                </div><!--End of col-xs-8-->
                            </div><!--End of row-->
                            <div class='row'>
                                <div class='col-xs-6'>
                                    <div class='pull-left'>
                                        <img src='{{score.homeTeam.home_logo}}'/>
                                    </div>
                                    <div class='pull-left'>
                                        <span ng-bind='::score.homeTeam.home_city'></span>
                                        <span ng-bind='::score.homeTeam.home_mascot'></span>
                                    </div>
                                </div>
                                <div class='col-xs-6'>
                                    <div class='pull-right'>
                                        <span ng-bind='::score.visitorTeam.visitor_city'></span>
                                        <span ng-bind='::score.visitorTeam.visitor_mascot'></span>
                                    </div>
                                    <div class='pull-right'>
                                        <img src='{{score.visitorTeam.visitor_logo}}'/>
                                    </div>
                                    
                                </div><!--End of col-xs-6-->
                            </div><!--End of row-->
                        </div><!--End of container-->
                    </div><!--End of scoreDiv-->
                </div><!--End of col-xs-12-->
            </div><!--End of row-->
        </div><!--End of container-fluid-->
    </div><!--End of main-->
    <!--Module-->
    <script src="/ang.js"></script>
    <!--Controller-->
    <script src='/Controllers/codecademy/bplScoreController.js'></script>
  </body>
</html>