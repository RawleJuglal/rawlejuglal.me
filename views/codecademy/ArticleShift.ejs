<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--Custom CSS-->
    <link rel="stylesheet" href='/stylesheets/codecademy/ArticleShift.css'>
    <!-- Latest compiled and minified JavaScript -->
    <!--JQuery-->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!--Bootstrap-->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src='/bower_components/angular/angular.min.js'></script>
  </head>
  <body ng-app='codecademy'>
      <div class='container'>
        <div class="panel-group panel-articleShift" id="accordion" role="tablist" aria-multiselectable="true" ng-controller="ashiftController">
          <div class="panel panel-default panel-ashift" ng-repeat="article in articles">
              <a  class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="{{article.headingHREF}}" aria-expanded="false" aria-controls="{{article.headingControls}}">
                <div class="panel-heading" role="tab" id="{{article.headingID}}" ng-click='updateClass(article.headingID)'>
                  <h4 class="panel-title">
                    <div class="item row">
                      <div class="col-xs-5 col-sm-4 col-md-3 col-lg-2">
                        <p class="source">{{article.headingSource}}</p>
                      </div>
                      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-8">
                        <p class="title">{{article.title}}</p>
                      </div>
                      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-2">
                        <p class="pubdate">{{article.pubdate}}</p>
                      </div>
                    </div>
                  </h4>
                </div>
              </a>
            <div id="{{article.headingControls}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{article.headingID}}">
              <div class="panel-body">
                <div class="description row">
                  <div class="col-xs-12 col-lg-offset-2 col-lg-8">
                    <h1>{{article.title}}</h1>
                    <p>{{article.descContent}}</p>
                  </div><!--End of col-xs-12-->
                </div><!--End of row-->
              </div><!--End of panel-body-->
            </div><!--End of collapseOne-->
          </div><!--End of panel-default-->
       </div><!--End of panel-group-->
      </div><!--End of container-->
    <!--Module-->
    <script src="/ang.js"></script>
    <!--Controller-->
    <script src='/Controllers/codecademy/ashiftController.js'></script>
  </body>
</html>