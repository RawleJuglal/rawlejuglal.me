  <body>
    <div class="main">
        <div class="container">
            <div class='row'>
              <div class='col-xs-12 col-sm-6 col-md-5 col-lg-3 text-center'>
              	<img src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/logo.svg'>
              </div><!--End of col-md-6-->
              <div id='navigation' class=' col-xs-12 col-sm-3 col-sm-offset-2 col-md-3 col-md-offset-4 col-lg-2 col-lg-offset-7 nav-center'>
                <ul class="nav nav-pills">
                    <li><a href='#'>Log In</a></li>
                    <li><a href='#'>Sign Up</a></li>
                </ul>
              </div><!--End of col-xs-12-->
            </div><!--End of row-->
            <div class='row'>
                <div class='col-xs-12'>
                    <h1 class='text-center'>Watch your favorite movies, instantly.</h1>
                </div><!--End of col-xs-12-->
            </div><!--End of row-->
            <div class='row'>
              <div class='col-xs-12 text-center'>
              	<a class='btn btn-default btn-link' href='#'>Learn More</a>
              </div><!--End of learnlink-->
            </div><!--End of row--> 
            <div class='row'>
                <div class='col-xs-12 col-sm-12 col-md-12'>
                    <form class='form-horizontal'>
                        <div class="row">
                            <div class='col-xs-8 col-sm-10'>
                               <input class='form-control' type="search" placeholder="Browse the collection"> 
                            </div><!--End of col-xs-9-->
                            <div class='col-xs-4 col-sm-2'>
                                <input class='form-control btn-link' type='submit' value='Search'>
                            </div><!--End of col-xs-3-->
                        </div><!--End of row-->
                    </form>
                </div><!--End of col-xs-8-->
            </div><!--End of row-->
      </div><!--End of container-->
    </div><!--End of main-->    

    <div class="supporting">
      <div class="container">
        <div class='row'>
            <div class='col-xs-12'>
                <h1 class='text-center'>A world of movies at your fingertips.</h1>
            </div><!--End of col-xs-12-->
            <div class='col-xs-12'>
               <p class='text-center'>Choose from the latest titles, with new movies added every day.</p> 
            </div><!--End of col-xs-12-->
        </div><!--End of row-->
        <div class='row'>
            <div class='col-sm-8'>
                <img class='img-responsive img-stretch' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/the-avengers.jpg'>
            </div>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/harry-potter.jpg'>
            </div>
        </div><!--End of row -->
        <div class='row'>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/frozen.jpg'>
            </div>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/iron-man.jpg'>
            </div>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/transformers.jpg'>
            </div>
        </div><!--End of row-->
        <div class='row'>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/lord-of-the-rings.jpg'>
            </div>
            <div class='col-sm-8'>
                <img class='img-responsive img-stretch' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/skyfall.jpg'>
            </div>
        </div><!--End of row -->
        <div class='row'>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/the-dark-knight.jpg'>
            </div>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/pirates-of-the-caribbean.jpg'>
            </div>
            <div class='col-sm-4'>
                <img class='img-responsive' src='https://s3.amazonaws.com/codecademy-content/projects/bolt-network/toy-story-3.jpg'>
            </div>
        </div><!--End of row-->
      </div><!--End of container-->
    </div><!--End of supporting-->

    <div class="feature">
      <div class="container">
        <h1 class='text-center'>Available Everywhere</h1>
        <p class='text-center'>Start watching on one device, and pick up where you left off on another device.</p>
      </div>
    </div>

    <div class="footer">
      <div class="container">
        <div class='row'>
          <div class='col-xs-4'>
            <ul class='no-pad'>
              <li>Bolt</li>
